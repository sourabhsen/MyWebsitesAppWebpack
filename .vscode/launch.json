{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome against localhost, with sourcemaps",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/dist/server/server.conf.js",
            "url": "http://localhost:3030",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        },
        {
            "name": "Attach to Chrome, with sourcemaps",
            "type": "chrome",
            "request": "attach",
            "port": 3030,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        }
    ]
}